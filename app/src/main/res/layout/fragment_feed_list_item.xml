<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_feed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Count: 10"/>
        <Spinner
            android:id="@+id/sp_feed_dates"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_header_number"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="@string/header_number"/>
        <TextView
            android:id="@+id/tv_header_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/header_time"/>
        <TextView
            android:id="@+id/tv_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_text"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/feed_item"/>
</LinearLayout>